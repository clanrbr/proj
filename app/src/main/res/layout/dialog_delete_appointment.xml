<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin_small">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Обявита ще бъде изтрита от огледи!"
        android:paddingLeft="@dimen/activity_vertical_margin_small"
        android:paddingTop="@dimen/activity_vertical_margin_small"
        android:paddingBottom="@dimen/activity_vertical_margin_small"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="right"
        android:gravity="right"
        android:weightSum="1">
        <Button
            android:id="@+id/closeAppointmentButton"
            android:layout_width="0dp"
            android:layout_marginLeft="2dp"
            android:layout_height="wrap_content"
            android:text="Затвори"
            android:background="@drawable/selector_expandable_shop"
            android:textColor="@android:color/white"
            android:layout_weight="0.5"/>
        <Button
            android:id="@+id/deleteAppointmentButton"
            android:layout_width="0dp"
            android:layout_marginRight="2dp"
            android:layout_height="wrap_content"
            android:text="Изтрий"
            android:background="@color/cpb_red_dark"
            android:textColor="@android:color/white"
            android:layout_weight="0.5"/>
    </LinearLayout>

</LinearLayout>