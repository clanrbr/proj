<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="horizontal" >-->

        <LinearLayout
            android:id="@+id/whole_lane"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="8dp" >

            <utils.MaterialDesignIconsTextView
                android:id="@+id/fragment_property_type_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="8dp"
                android:text="@string/material_icon_check_empty"
                android:textColor="@color/material_lime_900"
                android:textSize="26dp" />

            <utils.RobotoTextView
                android:id="@+id/type_of_property_single_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="0"
                android:background="@drawable/transparent_button_selector"
                android:maxLines="1"
                android:text="Mobile"
                android:textColor="@color/material_lime_700"
                android:textSize="20sp"
                app:typeface="robotoLight" />
        </LinearLayout>
    <!--</LinearLayout>-->

</LinearLayout>